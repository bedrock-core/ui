{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "stripInternal": true,
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@bedrock-core/ui/jsx": [
        "src/jsx/index.ts"
      ],
      "@bedrock-core/ui/jsx/*": [
        "src/jsx/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@bedrock-core/ui/jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**"
  ]
}