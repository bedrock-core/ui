{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "noEmit": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@bedrock-core/ui/jsx": [
        "src/jsx/index.ts"
      ],
      "@bedrock-core/ui/jsx/*": [
        "src/jsx/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@bedrock-core/ui"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}