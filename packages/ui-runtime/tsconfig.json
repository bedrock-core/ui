
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@bedrock-core/ui/jsx": [
        "src/jsx/index.ts"
      ],
      "@bedrock-core/ui/jsx/*": [
        "src/jsx/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@bedrock-core/ui"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}