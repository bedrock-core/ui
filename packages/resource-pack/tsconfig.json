{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "packs/BP/scripts/",
		"rootDir": "packs/BP/scripts",
		"stripInternal": true,
		"strict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noImplicitReturns": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@bedrock-core/ui"
	},
	"include": [
		"packs/BP/scripts/**/*",
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*",
		"eslint.config.mjs"
	]
}