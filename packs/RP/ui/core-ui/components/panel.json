{
	"namespace": "core-ui_components",
	// Components must be inside a panel with size 1,1 to be properly scalable
	"panel": {
		"type": "panel",
		// Note: from size_binding_x/y seems relative to parent size so making parent 10x10 will be 10 times larger the child
		"size": [
			1,
			1
		],
		// Components should have a single control that extends @core-ui_properties.control
		"controls": [
			{
				"control@core-ui_common.control": {
					"type": "image",
					"texture": "textures/ui/core-ui/components/panel/light/background"
				}
			}
		]
	}
}