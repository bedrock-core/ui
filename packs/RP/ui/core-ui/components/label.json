{
	"namespace": "core-ui_components",
	"core-ui_label@controllable_label": {
		"type": "label",
		"text": "#total",
		"color": [
			1,
			0,
			0
		],
		"bindings": [
			{
				"binding_name": "#custom_text",
				"binding_type": "collection",
				"binding_collection_name": "custom_form"
			},
			/* 1. STRING FIELD
         Core padded value bytes: 32
         Prefix (outside padding): 2 (s:)
         Marker: 1
         Raw slice length = 32 + 2 + 1 = 35 (UNCHANGED) */
			{
				"binding_type": "view",
				"source_property_name": "('%.35s' * #custom_text)",
				"target_property_name": "#raw_string"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#custom_text - #raw_string)",
				"target_property_name": "#rem_after_string"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.34s' * #raw_string)",
				"target_property_name": "#string_padded"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.2s' * #string_padded)",
				"target_property_name": "#string_prefix"
			},
			{
				"binding_type": "view",
				"source_property_name": "((#string_padded - #string_prefix) - ';')",
				"target_property_name": "#string_val"
			},
			/* 2. INTEGER FIELD
         Core padded digits: 16
         Prefix: 2 (i:)
         Marker: 1
         Raw slice length = 16 + 2 + 1 = 19 */
			{
				"binding_type": "view",
				"source_property_name": "('%.19s' * #rem_after_string)",
				"target_property_name": "#raw_int"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#rem_after_string - #raw_int)",
				"target_property_name": "#rem_after_int"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.18s' * #raw_int)",
				"target_property_name": "#int_padded"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.2s' * #int_padded)",
				"target_property_name": "#int_prefix"
			},
			{
				"binding_type": "view",
				"source_property_name": "((#int_padded - #int_prefix) - ';')",
				"target_property_name": "#int_val"
			},
			/* 3. FLOAT FIELD
         Core padded digits (including decimal): 24
         Prefix: 2 (f:)
         Marker: 1
         Raw slice length = 24 + 2 + 1 = 27 */
			{
				"binding_type": "view",
				"source_property_name": "('%.27s' * #rem_after_int)",
				"target_property_name": "#raw_float"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#rem_after_int - #raw_float)",
				"target_property_name": "#rem_after_float"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.26s' * #raw_float)",
				"target_property_name": "#float_padded"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.2s' * #float_padded)",
				"target_property_name": "#float_prefix"
			},
			{
				"binding_type": "view",
				"source_property_name": "((#float_padded - #float_prefix) - ';')",
				"target_property_name": "#float_val"
			},
			/* 4. BOOLEAN FIELD
         Core padded literal: 5 ("true" / "false" truncated or padded) per current serializer
         Prefix: 2 (b:)
         Marker: 1
         Raw slice length = 5 + 2 + 1 = 8 */
			{
				"binding_type": "view",
				"source_property_name": "('%.8s' * #rem_after_float)",
				"target_property_name": "#raw_bool"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.7s' * #raw_bool)",
				"target_property_name": "#bool_padded"
			},
			{
				"binding_type": "view",
				"source_property_name": "('%.2s' * #bool_padded)",
				"target_property_name": "#bool_prefix"
			},
			{
				"binding_type": "view",
				"source_property_name": "((#bool_padded - #bool_prefix) - ';')",
				"target_property_name": "#bool_val"
			},
			/* 5. COMPOSITE TOTAL */
			{
				"binding_type": "view",
				"source_property_name": "('_' + #string_val + '_' + #int_val + '_' + #float_val + '_' + #bool_val + '_')",
				"target_property_name": "#total"
			}
		]
	},
	"controllable_label@core-ui_properties.control": {}
}