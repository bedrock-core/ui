/**
 * @bedrock-core/ui entry point
 * The native elements are converted to their own ones
 * The rest of elements will be only "client-side" and will convert into a label
 */
{
	// TODO Using the title of the server form decide if use this generated_contents or the vanilla one
	"namespace": "server_form",
	"generated_contents": {
		"factory": {
			"name": "buttons",
			"control_ids": {
				"label": "@core-ui_components.text2",
				// "label": "@server_form.custom_label",
				"toggle": "@server_form.custom_toggle",
				"slider": "@server_form.custom_slider",
				"step_slider": "@server_form.custom_step_slider",
				"dropdown": "@server_form.custom_dropdown",
				"input": "@server_form.custom_input",
				"header": "@server_form.custom_header",
				"divider": "@settings_common.option_group_section_divider"
			}
		}
	},
	"custom_form_scrolling_content": {
		"modifications": [
			{
				"operation": "insert_front",
				"array_name": "controls",
				"value": [
					{
						"text@core-ui_components.text": {}
					}
				]
			}
		]
	}
}